@using Ecommerces.Entity.Model
@model Ecommerces.Models.ProductTblDto
@{
	ViewData["Title"] = "ProductManage";
	Layout = "~/Views/Shared/_AdminMaster.cshtml";
}



<form asp-action="ProductManage" asp-controller="ProductTbl" method="post" enctype="multipart/form-data">
	<div class="container-fluid">


		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<div class="d-flex justify-content-between align-content-center">
							<h4>Product</h4>
							<a href="@Url.Action("ProductForm" , "ProductTbl")" class="btn btn-primary"><i class="fa fa-plus"></i> Add</a>
						</div>
					</div>
					<div class="card-body">

						<div id="datatable-buttons_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
							<div class="row">
								<div class="col-sm-12 col-md-6">
									<div class="dt-buttons btn-group flex-wrap">
										<button class="btn btn-secondary buttons-copy buttons-html5" tabindex="0" aria-controls="datatable-buttons" type="button">
											<span>Copy</span>
										</button> <button class="btn btn-secondary buttons-excel buttons-html5" tabindex="0" aria-controls="datatable-buttons" type="button">
											<span>Excel</span>
										</button> <button class="btn btn-secondary buttons-pdf buttons-html5" tabindex="0" aria-controls="datatable-buttons" type="button">
											<span>PDF</span>
										</button> <div class="btn-group">
											<button class="btn btn-secondary buttons-collection dropdown-toggle buttons-colvis" tabindex="0" aria-controls="datatable-buttons" type="button" aria-haspopup="true" aria-expanded="false">
												<span>Column visibility</span>
											</button>
										</div>
									</div>
								</div>
								<div class="col-sm-12 col-md-6">
									<div id="datatable-buttons_filter" class="dataTables_filter">
										<label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="datatable-buttons"></label>
									</div>
								</div>
							</div><div class="row">
								<div class="col-sm-12">
									<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" style="border-collapse: collapse; border-spacing: 0px; width: 100%;" role="grid" aria-describedby="datatable-buttons_info">
										<thead>
											<tr role="row">
												<th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 59.4px;" aria-sort="ascending" aria-label="#No: activate to sort column descending">#No</th>
												<th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 203.4px;" aria-label="Name: activate to sort column ascending">Name</th>
												<th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 65.4px;" aria-label="Price: activate to sort column ascending">Price</th>
												<th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 101.4px;" aria-label="Categories: activate to sort column ascending">Category</th>

												<th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 121.4px;" aria-label="Brand: activate to sort column ascending">Brand</th>
												<th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 81.4px;" aria-label="Image: activate to sort column ascending">Image</th>
												<th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 81.4px;" aria-label="Image: activate to sort column ascending">Description</th>
												<th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 73.4px;" aria-label="Status: activate to sort column ascending">Status</th>
												<th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 56.4px;" aria-label="Edit: activate to sort column ascending">Edit</th>
												<th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 72.4px;" aria-label="Delete: activate to sort column ascending">Delete</th>
											</tr>
										</thead>


										<tbody>


											@foreach (var item in ViewData["ProductData"] as List<ProductTblDto>)
											{
												<tr class="odd text-center">
													<td class="sorting_1 dtr-control">@item.ProductId</td>
													<td>@item.Name</td>
													<td>₹@item.Price</td>
													<td>@item.Category</td>
												
													<td>@item.Brand</td>
													<td>
														@if (!string.IsNullOrEmpty(item.ProPhoto))
														{
															<img src="~/@item.ProPhoto" style="width:130px;height:130px; border-radius: 15px;" />
														}
													</td>

													<td>@item.Description</td>
													<td>@item.Status</td>
													<td><a asp-action="ProductForm" asp-controller="ProductTbl" asp-route-id="@item.ProductId" class="btn btn-success">Edit</a></td>
													<td><a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a></td>

												</tr>
											}









										</tbody>
									</table>
								</div>
							</div>

						</div>
					</div>
				</div>
			</div> <!-- end col -->
		</div> <!-- end row -->

	</div>













</form>