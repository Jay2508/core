@using Ecommerces.Entity
@model Ecommerces.Models.SpecificationsOptionsTblDto
@{
    ViewData["Title"] = "SpecificationsOptionsForm";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}


<form asp-action="SpecificationsOptionsForm" asp-controller="SpecificationsOptionsTbl" method="post" enctype="multipart/form-data">
	<div class="card">
		<div class="card-header">
			<h5>SpecificationsOptions Form</h5>
		</div>
		<div class="card-body">



			<div class="form-group">
				<label for="exampleInputPassword1">SpecificationName</label>
				<select class="form-control" asp-for="SpeId" asp-items="ViewBag.Data">
					<option value="0">-------SELECT SPECIFICATION-------</option>
				</select>
			</div>

			<div class="form-group">
				<label for="exampleInputEmail1">Value</label>
				<div>

					<input class="form-control" type="text" asp-for="Value" />

				</div>


			</div>
		
			<div class="form-group">
				<label for="exampleInputPassword1">Status</label>
				<select class="form-control" asp-for="Status">
					<option value="Select Status">Select Status</option>
					<option value="Active">Active</option>
					<option value="DeActive">DeActive</option>

				</select>

			</div>


		</div>



		@if (this.ViewContext.RouteData.Values["id"] != null)
		{
			<div class="card-footer text-center">
				<input type="submit" class="btn btn-primary" name="btn" value="Update" />
			</div>
		}
		else
		{
			<div class="card-footer text-center">
				<input type="submit" class="btn btn-primary" name="btn" value="Save" />
			</div>
		}
		@if (ViewBag.Msg != null)
		{
			<script>
				alert("@ViewBag.Msg");
			</script>
		}

	</div>
</form>