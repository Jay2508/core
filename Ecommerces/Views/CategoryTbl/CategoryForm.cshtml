@using Ecommerces.Entity
@model Ecommerces.Models.CategoryTblDto
@{
	ViewData["Title"] = "CategoryForm";
	Layout = "~/Views/Shared/_AdminMaster.cshtml";
}
<form asp-action="CategoryForm" asp-controller="CategoryTbl" method="post" enctype="multipart/form-data">
	<div class="card">
		<div class="card-header">
			<h5>Category Form</h5>

		</div>
		<div class="card-body">

			<div class="form-group">
				<label for="exampleInputEmail1">Category</label>
				<div>

					<input class="form-control" type="text" asp-for="Category" />

				</div>
			</div>

			<div class="row">
				<div class="col-sm-8 col-12">
					<div class="mb-3">
						<label>Icon</label>

						<input class="form-control" type="file" asp-for="Icon" value="" />

					</div>

				</div>
				<div class="col-sm-4 col-12">
					<div class="mb-3">

						@if (Model != null)
						{
							@if (!string.IsNullOrEmpty(@Model.CategoryIcon))
							{
								<img class="img-fluid rounded" src="~/@Model.CategoryIcon" style="width:190px;height:150px;" />
							}
							else
							{
								<img src="@Url.Content("~/Content/image/no-image-available.png")" alt="No Image Available" />
							}
						}


					</div>
				</div>
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Status</label>
				<select class="form-control" asp-for="Status">
					<option value="Select Status">Select Status</option>
					<option value="Active">Active</option>
					<option value="DeActive">DeActive</option>

				</select>

			</div>


		</div>
		@if (this.ViewContext.RouteData.Values["id"] != null)
		{
			<div class="card-footer text-center">
				<input type="submit" class="btn btn-primary" name="btn" value="Update" />
			</div>
		}
		else
		{
			<div class="card-footer text-center">
				<input type="submit" class="btn btn-primary" name="btn" value="Save" />
			</div>
		}
		@if (ViewBag.Msg != null)
		{
			<script>
				alert("@ViewBag.Msg");
			</script>
		}
	</div>
</form>
