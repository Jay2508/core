@using Ecommerces.Entity
@model Ecommerces.Models.RegisterTblDto
@{
    ViewData["Title"] = "RegisterForm";
    Layout = "~/Views/Shared/_ClientMaster.cshtml";
}

<form asp-action="RegisterForm" asp-controller="RegisterTbl" method="post" enctype="multipart/form-data">
   <div class="container">
        

        <section class="log-in-section section-b-space">
            <div class="container-fluid-lg w-100">
                <div class="row">
                

                    <div class="col-12">
                        <div class="log-in-box">
                            <div class="log-in-title">
                          
                                <h4 class="text-center">Create New Account</h4>
                            </div>
                            <br />
                            <br />
                            <div class="input-box">
                                <div class="row">
                                    <div class="col-2"></div>
                                    <div class="col-6">
                                    <div class="col-12">
                                       
                                         
                                            <input class="form-control" type="text" asp-for="UserName" placeholder="UserName" />

                                 
                                    </div>
                                   <br />
                                    <div class="col-12">
                                     


                                 
                                            <input class="form-control" type="text" asp-for="Email" placeholder="Email Address" />


                                    </div>
                                    <br />

                                    <div class="col-12">
                              
                                   

                                            <input class="form-control" type="password" asp-for="Password" placeholder="Password" />

                               
                                    </div>
                                    <br />

                                    <div class="col-12">
                                      
                                          
                                            <input class="form-control" type="number" asp-for="MobileNo" placeholder="Mobile No" />
                                        
                                
                                    </div>
                                    <br />

                                    <div class="col-12">

                                        <input type="submit" class="btn btn-success ms-auto" name="btn" value="Sign Up" />

                                    </div>
                                    </div>
                                    <div class="col-2"></div>

                                </div>
                            </div>



                           
                        </div>
                    </div>

                  
                </div>
            </div>
        </section>
   </div>
    @if (ViewBag.Msg != null)
    {
        <script>
            alert("@ViewBag.Msg");
        </script>
    }
 </form>
